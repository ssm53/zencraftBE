// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String?
  genimages GenImage[]
  varimages VarImage[]
  editimages EditImage[]
}

model GenImage {
  id          Int     @id @default(autoincrement())  
  user        User    @relation(fields: [userId], references: [id])
  userId      Int 
  prompt      String? 
  size        String?   
  url         String? @unique
}

model VarImage {
  id          Int     @id @default(autoincrement())  
  user        User    @relation(fields: [userId], references: [id])
  userId      Int  
  size        String?   
  url         String? @unique
}

model EditImage {
  id          Int     @id @default(autoincrement())  
  user        User    @relation(fields: [userId], references: [id])
  userId      Int 
  prompt      String? 
  size        String?   
  url         String? @unique
}


